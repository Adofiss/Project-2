<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workouts</title>
</head>

<body>
    <%- include('../partials/header') %>
        <table id="list">
            <thead>
                <tr>
                    <th>name</th>
                    <th>type</th>
                    <th>exercise</th>
                    <th>time</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% workouts.forEach(function(m) { %>
                    <tr>
                        <td>
                            <%= m.name %>
                        </td>
                        <td>
                            <%= m.type %>
                        </td>
                        <td>
                            <%= m.exercise %>
                        </td>
                        <td>
                            <%= m.time %>
                        </td>
                        <td><a href="/workouts/<%= m._id %>">DETAILS</a></td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <%- include('../partials/footer') %>
</body>

</html>